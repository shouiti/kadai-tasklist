<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">

    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
      <div class="form-group">
        <%= f.label :content, 'content' %>
        <%= f.text_field :content, class:'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :status, '状況' %>
        <%= f.select :status, [ "予定", "進行中", "完成"], class:'form-control' %>
      </div>
  
      <%= f.submit '入力', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>