<% if tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>content</th>
        <th>status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, edit_task_path(task) %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
          <td><%= link_to 'delete', task, method: :delete, data: { confirm: "Yes sure?" }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate tasks %>
  </div>
<% end %>
<%= link_to 'New Task', new_task_path, class: 'btn btn-primary btn-xs' %>